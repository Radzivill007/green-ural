{
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.rulers": [0],
  "editor.formatOnSave": true,
  "files.encoding": "utf8",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "prettier.printWidth": 80,
  "search.exclude": {
    "public/**": true,
    "node_modules/**": true
  },
  "files.exclude": {
    "public": true,
    "node_modules": true,
    ".cache": true,
    ".vscode": true
  },
  "eslint.autoFixOnSave": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    {
      "language": "typescript",
      "autoFix": true
    },
    {
      "language": "typescriptreact",
      "autoFix": true
    }
  ],
  "jest.jestCommandLine": "yarn test"
}
